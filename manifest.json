{
  "name": "Stepstone",
  "description": "Helps you read quickly by bolding the first few letters of every word.",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "optional_permissions": [],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/book-read-fill-16.png",
      "32": "/images/book-read-fill-32.png",
      "48": "/images/book-read-fill-48.png",
      "128": "/images/book-read-fill-64.png"
    }
  },
  "icons": {
    "16": "/images/book-read-fill-16.png",
    "32": "/images/book-read-fill-32.png",
    "48": "/images/book-read-fill-48.png",
    "128": "/images/book-read-fill-64.png"
  },
  "manifest_version": 3
}